html,body{
	font-size 13px;
	min-width 1100px;
}
header.hero img{
	width 151px;
	height 42px;
}
main.home[aria-labelledby="main-title"]{
	position relative;
	height 100vh;
	box-sizing border-box;
}
main.home[aria-labelledby="main-title"] div.footer{
	position absolute;
	left 0;
	bottom 0;
	width 100%;
}
div.custom-block{
	&.tip,&.warning,&.danger{
		padding 1rem 1.5rem;
		p{
			margin-bottom .3rem;
		}
	}
}
.home{
	header.hero{
		h1{
			font-size 2.5rem;
		}
	}
	.features{
		.feature{
			h2{
				padding-bottom .3rem;
			}
		}
	}
}